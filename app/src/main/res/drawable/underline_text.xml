<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background (transparent) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Underline -->
    <item android:top="2dp"> <!-- Adjust top padding as needed -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Color of the underline -->
            <size android:height="2dp"/> <!-- Height of the underline -->
        </shape>
    </item>
</layer-list>
